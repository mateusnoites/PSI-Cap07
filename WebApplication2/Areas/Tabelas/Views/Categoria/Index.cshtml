@model IEnumerable<Modelo.Tabelas.Categoria>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Listagem de Categoria";
}
@if (@TempData["Message"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Message"]
    </div>
}
<!DOCTYPE html>

<html>
<head>

    <meta name="viewport" content="width=device-width" />
    <title>Index</title>

</head>
<body>
    <div class="panel panel-primary">
        <div class="panel-heading">
            Relação de Categorias registradas
        </div>
        <div class="panel-body">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.CategoriaId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Nome)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.CategoriaId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nome)
                            </td>
                            <td>
                                @Html.ActionLink("Alterar", "Edit", new { id = item.CategoriaId }) |
                                @Html.ActionLink("Detalhes", "Details", new { id = item.CategoriaId }) |
                                @Html.ActionLink("Eliminar", "Delete", new { id = item.CategoriaId })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="panel-footer panel-info">
            @Html.ActionLink("Registrar um nova Categoria", "Create", null, new { @class = "btn btn-success" })
        </div>
    </div>
    @section styles{
        <link href="@Url.Content("~/content/DataTables-1.10.2/css/dataTables.bootstrap.css")" rel="stylesheet" />
    }
    @section ScriptPage{
        <script src="@Url.Content("~/Scripts/DataTables-1.10.2/jquery.dataTables.js")"></script>
        <script src="@Url.Content("~/Scripts/DataTables-1.10.2/dataTables.bootstrap.js")"></script>
        <script type="text/javascript">
            $('.table').dataTable({
                "order": [[1, "asc"]]
            });

        </script>
        <script type="text/javascript">
            $(document).ready(function () {
                $('li').removeClass("active");
                $('#liCategorias').addClass("active");
            });
        </script>
    }
</body>
</html>